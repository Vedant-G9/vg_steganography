<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/ic_bg"
    xmlns:android="http://schemas.android.com/apk/res/android" >


    <TextView
        android:layout_width="270dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="240dp"
        android:background="@drawable/ic_imagetxt_ia"
        android:text=""
        android:textSize="55dp" />

    <Button
        android:id="@+id/encode_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="420dp"
        android:text=""
        android:background="@drawable/ic_encode_button"/>

    <Button
        android:id="@+id/decode_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/encode_button"
        android:layout_alignEnd="@+id/encode_button"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="0dp"
        android:text=""
        android:background="@drawable/ic_decode_button"/>


</RelativeLayout>