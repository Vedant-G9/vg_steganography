        android:layout_centerInParent="true"
        android:layout_marginBottom="12dp"
        android:background="@drawable/ic_imagee_button"
        android:text=""
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/audioButton"
